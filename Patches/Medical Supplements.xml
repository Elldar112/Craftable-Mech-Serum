<?xml version="1.0" encoding="utf-8"?>
<Patch>

  <Operation Class="PatchOperationReplace" MayRequire="Mlie.MedicalSupplements">
        <xpath>Defs/RecipeDef[defName="CR_HealerSerum"]/researchPrerequisite</xpath>
        <value>
			<researchPrerequisite>MSHealerMechSerum</researchPrerequisite>
        </value>
  </Operation>
  
  <Operation Class="PatchOperationReplace" MayRequire="Mlie.MedicalSupplements">
        <xpath>Defs/RecipeDef[defName="CR_ResurrectorSerum"]/researchPrerequisite</xpath>
        <value>
			<researchPrerequisite>MSRessurectMechSerum</researchPrerequisite>
        </value>
  </Operation>

  <Operation Class="PatchOperationRemove" MayRequire="Mlie.MedicalSupplements">
        <xpath>Defs/ResearchProjectDef[defName="MechSerumProduction"]</xpath>
  </Operation>

  <Operation Class="PatchOperationAdd" MayRequire="Mlie.MedicalSupplements">
        <xpath>Defs/RecipeDef[defName="CR_ResurrectorSerum" or defName="CR_HealerSerum"]/ingredients</xpath>
        <value>
			<li>
				<filter>
					<thingDefs>
						<li>MSInjector_Unit</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
        </value>
  </Operation>
  

</Patch>
